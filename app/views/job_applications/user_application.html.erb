  <table class="table table-stripped">
    <thead>
      <tr>
        <th scope="col"> number </th>
        <th scope="col">Applicant_name</th>
        <th scope="col">Status</th>
        <th scope="col">Change status</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <%i=0%>
    <% @job_applications.each do |job|%>
      <tbody>
        <%user=User.find(job.user_id)%>
        <%i=i+1%>
          <tr>
            <td scope="row"><h2><%=i%></h2></td>
            <td scope="row"><h2><%= user.name%></h2></td>

            <td scope="row"><h3 style='color:black'><%=job.status%></h3></td>
            <%if job.status=='hold'%>
              <td><%=link_to "Accept",job_applications_accept_path(jobs_id:job.job_id,user_id:job.user_id),class:'btn btn btn-primary'%>
              <%=link_to "Cancle",job_applications_rejected_path(jobs_id:job.job_id,user_id:job.user_id)%></td>
            <%else%>
              <td><h3 style ="color:green"><%="Already Accepted"%></h3><td> 
            <%end%>
             
          </tr>
     
     <%=paginate @jobs%>   
      </tbody>
    <%end%>

    
  </table>
</div>